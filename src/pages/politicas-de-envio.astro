---
import shippingPoliciesHero from "@images/shipping-policies/envios_hero.webp";
import mapaPeru from "@images/shipping-policies/mapa.webp";
import iconCamion from "@icons/icon_camion.webp";
import iconUbicacionRojo from "@icons/icon_ubicacion_rojo.webp";
import iconUbicacionVerde from "@icons/icon_ubicacion_verde.webp";
import Layout from "../layouts/Layout.astro";

const whatsappLink = "https://api.whatsapp.com/send?phone=51978883199";
---

<Layout
  title="Política de Envíos de Maquinaria | Tami Maquinarias Perú"
  description="Conoce nuestra política de envíos de maquinaria industrial en Perú. Entregas rápidas y seguras a Lima y provincias con tarifas claras."
  canonicalUrl="https://tamimaquinarias.com/politicas-de-envio/"
>
  <!-- Hero -->
  <section
    class="relative flex flex-col justify-center items-center lg:items-start text-white bg-cover bg-center h-screen lg:h-dvh 2xl:h-[90dvh] pt-16 lg:pt-20 lg:ps-20"
    style={{
      backgroundImage: `linear-gradient(to bottom, rgba(0,120,111,.75), rgba(0,0,0,.75)), url(${shippingPoliciesHero.src})`,
    }}
  >
    <!-- Icono + título -->
    <div class="flex items-center mb-6 lg:mb-8">
      <img src={iconCamion.src} alt="Icono de Camión" title="Icono de Camión" class="h-20 2xl:h-36 mr-4 lg:mr-8" />
      <h2
        class="font-extrabold leading-tight text-4xl sm:text-5xl md:text-6xl lg:text-7xl xl:text-8xl 2xl:text-[96px]"
        style={{ textShadow: "rgba(0,0,0,.2) 1px 1px 20px" }}
      >
        POLÍTICA<br />DE ENVÍOS
      </h2>
    </div>

    <!-- Párrafo debajo -->
    <p class="mt-4 max-w-3xl font-bold leading-relaxed text-base sm:text-lg lg:text-2xl 2xl:text-4xl">
      Descubre nuestras políticas de envío,<br />
      pensadas para garantizar una experiencia<br />
      confiable y segura en cada pedido.
    </p>
  </section>

  <!-- Contenido -->
  <section class="grid grid-cols-1 sm:grid-cols-2 gap-6 lg:gap-10 py-8">
    <!-- Mapa -->
    <div class="flex justify-center items-center">
      <img src={mapaPeru.src} alt="Mapa apuntando Lima" title="Mapa apuntando Lima" class="w-3/4 md:w-1/2" />
    </div>

    <!-- Texto -->
    <div class="flex flex-col px-4 sm:pr-6 space-y-6">
      <h2 class="text-teal-700 font-extrabold text-xl sm:text-2xl lg:text-3xl 2xl:text-5xl lg:mb-2">
        ENVÍOS A LIMA Y PROVINCIAS
      </h2>

      <div class="flex flex-col sm:items-start space-y-5">
        <div class="text-sm sm:text-base lg:text-lg 2xl:text-2xl leading-relaxed">
          <!-- Lima Metropolitana -->
          <h3 class="font-bold text-lg sm:text-xl lg:text-2xl">EN LIMA METROPOLITANA</h3>
          <ul class="list-disc ml-5 2xl:ml-9 mt-2 space-y-1 text-sm lg:text-base 2xl:text-xl">
            <li>Santa Anita</li>
            <li>Centro de Lima</li>
            <li>Lince</li>
            <li>Rimac</li>
            <li>La Victoria</li>
          </ul>

          <!-- Botón WhatsApp 15 soles -->
          <a
            href={whatsappLink}
            target="_blank"
            rel="noopener noreferrer"
            class="flex items-center gap-3 bg-orange-600 hover:bg-orange-700 transition text-white rounded-full px-4 sm:px-6 py-2 font-semibold text-sm lg:text-base 2xl:text-2xl my-5"
          >
            <svg
              viewBox="0 0 24 24"
              class="scale-x-[-1] w-8 h-8"
              fill="none"
              xmlns="http://www.w3.org/2000/svg"
              aria-hidden="true"
            >
              <path
                fill-rule="evenodd"
                clip-rule="evenodd"
                d="M2.678 11.422a2.5 2.5 0 0 0 0 3.536l6.364 6.364a2.5 2.5 0 0 0 3.536 0l7.69-7.69A2.5 2.5 0 0 0 21 11.864V4.5A1.5 1.5 0 0 0 19.5 3h-7.365a2.5 2.5 0 0 0-1.768.732l-7.69 7.69zM14.988 7C13.878 7 13 7.832 13 8.988c0 1.157.878 2.012 1.988 2.012C16.121 11 17 10.145 17 8.988 17 7.832 16.12 7 14.988 7z"
                fill="currentColor"
              ></path>
            </svg>

            <div class="leading-snug text-sm lg:text-base 2xl:text-2xl">
              <p class="mb-1">
                Precio de envío <span class="font-extrabold">15 soles</span>
              </p>
              <ul class="list-disc ml-4 2xl:ml-6 text-xs lg:text-sm 2xl:text-xl">
                <li>Otros productos a cotizar</li>
              </ul>
            </div>
          </a>

          <!-- Botón WhatsApp 20 soles -->
          <a
            href={whatsappLink}
            target="_blank"
            rel="noopener noreferrer"
            class="flex items-start gap-3 text-teal-700 hover:text-teal-900 transition font-bold text-sm lg:text-base 2xl:text-2xl"
          >
            <img src={iconUbicacionRojo.src} alt="Ubicación" class="w-8 h-8" />
            <div class="leading-relaxed">
              <p class="mb-1">
                Los demás distritos de Lima Metropolitana<br />
                Precio de envío <span class="font-extrabold text-lg lg:text-xl 2xl:text-4xl">20 soles</span>
              </p>
              <ul class="list-disc ml-4 2xl:ml-6 text-xs lg:text-sm 2xl:text-2xl">
                <li>Otros productos a cotizar</li>
              </ul>
            </div>
          </a>
        </div>
      </div>

      <!-- Provincias -->
      <a
        href={whatsappLink}
        target="_blank"
        rel="noopener noreferrer"
        class="flex items-start my-2 md:my-10 hover:text-teal-900 transition"
      >
        <img
          src={iconUbicacionVerde.src}
          alt="Signo de ubicación"
          title="Signo de ubicación"
          class="hidden sm:block w-4 lg:w-6 2xl:w-8 ms-1 me-3 mt-1 lg:me-5"
        />
        <div>
          <h2 class="text-teal-700 font-extrabold mb-2 text-lg sm:text-2xl lg:text-3xl 2xl:text-5xl">
            PROVINCIAS
          </h2>
          <p class="font-semibold text-justify max-w-xl leading-relaxed text-sm sm:text-base lg:text-lg 2xl:text-3xl">
            El cliente elegirá la empresa por la cual desea el envío y pagará lo
            que la empresa cotice al momento de la entrega.
          </p>
        </div>
      </a>
    </div>
  </section>
</Layout>
