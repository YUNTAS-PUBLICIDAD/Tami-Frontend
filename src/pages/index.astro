---
import Layout from "../layouts/Layout.astro";
import Hero from "../components/index/Hero";
import indexCards from "@data/indexCards.data";
import Card from "../components/index/Card";
import CardSlider from "../components/index/CardSlider";
import circuitos from "@images/index/circuitos.webp";
import bgCompromiso from "@images/index/bg_compromiso.gif";
import manoRobotica from "@images/index/mano_robotica.webp";
import iconGarantia from "@icons/icon_garantia.webp";
import trabajo from "@images/index/trabajo.webp";
---

<Layout title="Tami Perú">
  <Hero client:load />
  <section class="w-full h-96 lg:px-10 my-8 place-items-center">
    {/* Carrusel para pantallas más pequeñas */}
    <CardSlider cardList={indexCards} client:load />
    {/* Vista normal para pantallas medianas o más grandes */}
    <div
      class="hidden lg:grid lg:grid-cols-3 w-full h-full items-center justify-items-center"
    >
      {
        indexCards.map((card) => (
          <Card
            title={card.title}
            image={card.image.src}
            paragraph={card.paragraph}
          />
        ))
      }
    </div>
  </section>
  <section class="w-full pb-12 2xl:pb-24 lg:scroll-mt-16" id="destino">
    {/* Banner superior con texto superpuesto */}
    <div
      class="relative flex justify-center items-center h-20 md:h-32 2xl:h-40"
    >
      {/* Texto superpuesto */}
      <h3
        class="bg-teal-700/70 w-full h-full z-10 text-white text-sm md:text-lg 2xl:text-2xl font-bold text-center content-center px-3"
      >
        Comprometidos con el
        <br />
        emprendedor peruano, ofreciendo
        <br />
        productos asequibles
      </h3>
      {/* Imagen de fondo del banner */}
      <img
        src={bgCompromiso.src}
        class="absolute w-full h-full object-cover z-0"
        alt="Gif del banner del mensaje de compromiso"
      />
    </div>

    {
      /* Sección principal con imagen de mano robótica y mensaje de bienvenida */
    }
    <div class="relative grid justify-center items-center w-full py-16">
      <img
        src={circuitos.src}
        alt="circuitos"
        class="absolute top-0 left-1/2 transform -translate-x-1/2 w-full lg:w-3/4 h-full object-cover object-[center_-40px] 2xl:object-[center_-325px] 2xl:h-full"
      />
      {/* Imagen de mano robótica */}
      <img
        src={manoRobotica.src}
        class="hidden absolute bottom-0 left-0 top-40 sm:inline sm:w-4/12 lg:w-[37%] xl:w-[40%] 2xl:w-[36%] z-30"
        alt="Mano robótica"
      />
      {/* Contenedor del mensaje de bienvenida */}
      <div
        class="bg-teal-700 place-self-center text-white rounded-[50px] py-6 px-10 text-center w-3/5 z-20"
      >
        {/* Título de bienvenida */}
        <h3 class="text-xs md:text-xl mb-2 font-light 2xl:text-3xl">
          ¡Bienvenidos a <span class="font-bold">TAMI!</span>
        </h3>
        {/* Subtítulo principal */}
        <div class="italic font-bold mb-3 text-2xl md:text-5xl 2xl:text-7xl">
          Tecnología <span class="font-light text-2xl">e</span>
          <br />
          innovación <br />
          <span class="font-light">para ti</span>
        </div>
        {/* Línea separadora */}
        <hr class="place-self-center w-24 border-white border-[1px] mb-5" />
        {/* Descripción */}
        <p
          class="font-light place-self-center w-full md:w-2/4 text-xs md:text-base 2xl:text-3xl"
        >
          Ofrecemos calidad y soluciones avanzadas para mejorar y equipar tu
          negocio y hogar de manera eficiente
        </p>
      </div>
    </div>
  </section>
  <section
    class="w-full flex flex-col lg:flex-row items-center justify-center py-6 px-2 lg:px-16"
  >
    {/* Texto */}
    <div class="lg:w-1/2 text-center lg:text-left">
      <h2
        class="flex-col text-teal-700 font-extrabold text-3xl sm:text-4xl lg:text-6xl 2xl:text-7xl flex lg:justify-start gap-2"
      >
        <span class="flex justify-center lg:justify-start items-end">
          ¿POR QUÉ
          <img
            src={iconGarantia.src}
            alt="Garantía"
            class="ml-2 w-10 sm:w-12 lg:w-24"
          />
        </span>
        ELEGIR TAMI?
      </h2>
      <p class="text-gray-600 text-xl 2xl:text-4xl xl:text-3xl mt-4">
        Calidad respaldada por nuestra garantía, mostrando nuestro compromiso
        con la satisfacción de nuestros clientes.
      </p>

      {/* Botones */}
      <div
        class="flex flex-wrap gap-4 my-6 justify-center text-white lg:justify-start 2xl:text-2xl xl:text-lg"
      >
        <div class="bg-teal-700 px-4 2xl:px-7 py-2 2xl:py-3 rounded-full">
          CALIDAD
        </div>
        <div class="bg-teal-600 px-4 2xl:px-7 py-2 2xl:py-3 rounded-full">
          INNOVACIÓN
        </div>
        <div class="bg-teal-500 px-4 2xl:px-7 py-2 2xl:py-3 rounded-full">
          NEGOCIO PROPIO
        </div>
      </div>
    </div>

    {/* Imagen */}
    <img src={trabajo.src} alt="Trabajo" class="w-5/6 lg:w-1/2 2xl:w-1/4" />
  </section>
</Layout>
