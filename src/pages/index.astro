---
import Layout from "../layouts/Layout.astro";
import Hero from "../components/index/Hero";
import bg_card4 from "@images/index/cards/porquetami2.png";
import mapaPeru from "@images/shipping-policies/mapa.webp";
import ProductSlideshow from "src/components/index/ProductSlideshow.tsx";
import SectionCardsContainer from "src/components/index/SectionCardsContainer.astro";

// Configuración del mensaje de WhatsApp
const phoneNumber = "51978883199";
const message = "Hola TAMI, quisiera cotizar un envío para Lima Metropolitana.";
const whatsappLink = `https://api.whatsapp.com/send?phone=${phoneNumber}&text=${encodeURIComponent(message)}`;

import "src/styles/global.css";
import Testimonials from "../components/index/Slideshow";
---

<Layout
  title="Maquinaria y Decoración para Negocios"
  description="Descubre maquinaria y decoración ideal para tu negocio. Compra selladoras, equipos de acabado y productos para emprendedores en Perú."
  canonicalUrl="https://tamimaquinarias.com/"
>
  {/* Hero principal con CTA */}
  <Hero client:idle />

  {/* Modal de asesoría/captación de leads: ahora global en Layout */}

  {/* Sección de bienvenida con imágenes y texto */}
  <section
    id="bienvenida"
    class="min-h-[360px] flex items-center justify-center px-4 text-center bg-white"
  >
    <div class="max-w-4xl mx-auto">
      <h3
        class="text-teal-700 text-3xl md:text-4xl xl:text-5xl font-extrabold tracking-wider leading-tight mb-4"
      >
        ¡BIENVENIDOS A TAMI!
      </h3>
      <p class="text-black max-w-2xl">
        COMPROMETIDOS CON EL <span class="font-bold text-black-700"
          >EMPRENDEDOR PERUANO</span
        >, OFRECIENDO PRODUCTOS <span class="font-bold text-black-700"
          >ASEQUIBLES</span
        >
      </p>
    </div>
  </section>

  
  {/* Carrusel de productos con gradiente de fondo */}
  <section
    class="w-full grid grid-cols-1 lg:grid-cols-2 gap-8 py-16 px-6 lg:px-16 bg-[linear-gradient(to_right,_#2A938B,_#0D2D2B)]"
  >
    <!-- Título - 50% izquierda -->
    <div class="flex items-center justify-center">
      <h3
        class="text-white text-3xl lg:text-4xl xl:text-8xl font-bold leading-tight text-center lg:text-left"
      >
        <span class="block">PRODUCTOS</span>
        <span class="block">DESTACADOS</span>
      </h3>
    </div>

    <!-- Slideshow - 50% derecha -->
    <div class="flex items-center justify-center w-full overflow-hidden">
      <ProductSlideshow client:idle />
    </div>
  </section>
  <!-- ENVIOS -->
  <section class="grid grid-cols-1 sm:grid-cols-2 gap-6 lg:gap-10 py-8 mt-10">
    {/* Texto a la izquierda, centrado vertical y horizontalmente */}
    <div
      class="flex flex-col justify-center items-center px-4 sm:px-12 space-y-6 text-center"
    >
      <h2
        class="font-extrabold text-3xl sm:text-4xl lg:text-5xl 2xl:text-6xl lg:mb-2 max-w-3/2 leading-snug max-w-3/2"
        style="margin: 0 auto; color: #0C998A;"
      >
        ENVÍOS A TODA LIMA METROPOLITANA
      </h2>

      <a
        href={whatsappLink}
        title="Enviar mensaje por WhatsApp"
        target="_blank"
        rel="noopener noreferrer"
        class="flex items-center gap-3 bg-[#009689] hover:bg-[#007a72] transition text-white rounded-2xl px-6 py-4 font-semibold text-lg lg:text-xl 2xl:text-3xl my-5"
      >
        <svg
          viewBox="0 0 24 24"
          class="scale-x-[-1] w-10 h-10"
          fill="none"
          xmlns="http://www.w3.org/2000/svg"
          aria-hidden="true"
        >
          <path
            fill-rule="evenodd"
            clip-rule="evenodd"
            d="M2.678 11.422a2.5 2.5 0 0 0 0 3.536l6.364 6.364a2.5 2.5 0 0 0 3.536 0l7.69-7.69A2.5 2.5 0 0 0 21 11.864V4.5A1.5 1.5 0 0 0 19.5 3h-7.365a2.5 2.5 0 0 0-1.768.732l-7.69 7.69zM14.988 7C13.878 7 13 7.832 13 8.988c0 1.157.878 2.012 1.988 2.012C16.121 11 17 10.145 17 8.988 17 7.832 16.12 7 14.988 7z"
            fill="currentColor"></path>
        </svg>

        <div class="leading-snug">
          <p>COTÍZALO AQUÍ</p>
        </div>
      </a>
    </div>

    {/* Mapa a la derecha */}
    <div class="flex justify-center items-center">
      <img
        src={mapaPeru.src}
        alt="Mapa apuntando Lima"
        title="Mapa apuntando Lima"
        class="w-3/4 md:w-1/2"
      />
    </div>
  </section>

  <section class="w-full px-4 lg:px-8 py-8">
    <div
      class="rounded-3xl overflow-hidden flex flex-col md:relative"
    >
     
      <img
        src={bg_card4.src}
        alt="Por qué elegir TAMI"
        class="w-full h-auto object-contain md:object-cover md:min-h-[650px] lg:min-h-[800px] blur-[4px]"
      />

      <!-- Overlay oscuro para legibilidad del texto - Solo visible en desktop -->
      <div class="hidden md:block absolute inset-0 bg-black/40 z-0"></div>

      <!-- Contenido - En móvil: debajo de la imagen con fondo | En desktop: posición absoluta -->
      <div class="bg-gray-800 py-6 md:py-0 md:bg-transparent md:absolute md:inset-0 flex items-center justify-center md:items-center md:justify-end z-10">
        <div class="text-white text-center max-w-2xl px-6 md:px-12 md:mr-8">
          <h2
            class="text-xl sm:text-2xl md:text-4xl lg:text-5xl xl:text-6xl font-bold mb-2 sm:mb-3 md:mb-4 leading-tight drop-shadow-md"
          >
            ¿POR QUÉ ELEGIR TAMI?
          </h2>
          <p
            class="text-[10px] sm:text-xs md:text-sm lg:text-base xl:text-lg font-light mb-3 sm:mb-4 md:mb-6 opacity-95 leading-relaxed drop-shadow-sm"
          >
            Calidad respaldada por nuestra garantía,<br class="hidden md:block" />
            mostrando nuestro compromiso con la<br class="hidden md:block" />
            satisfacción de nuestros clientes.
          </p>
          <a
            href="/productos"
            title="Ver productos"
            style="background-color: #00786F;"
            class="hover:bg-teal-700 text-white font-semibold px-4 sm:px-6 md:px-8 py-2 sm:py-2.5 md:py-3 rounded-sm transition-all duration-300 inline-flex items-center justify-center shadow-lg cursor-pointer text-xs sm:text-sm md:text-base"
          >
            <span>DESCUBRE</span>
            <span class="ml-2">+</span>
            <svg
              class="w-4 h-4"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"></svg>
          </a>
        </div>
      </div>

      
    </div>
  </section>

  {/* Sección de productos destacados en cartas */}
  <section
    id="sectionCards"
    class="w-full my-8 scroll-mt-20 max-w-screen-2xl mx-auto"
  >
    <SectionCardsContainer />
  </section>
  <section
    class="w-full pt-12 mt-16 md:mt-24 flex flex-col relative bg-[linear-gradient(90deg,_#035751_0%,_#018C81_100%)] before:content-[''] before:absolute before:top-0 before:left-0 before:right-0 before:h-[7px] before:shadow-[0_-4px_6px_-2px_rgba(0,0,0,0.1)] before:shadow-gray-200"
  >
    <h2
      class="text-center text-3xl md:text-4xl font-black text-white mb-4 tracking-widest"
    >
      LO QUE DICEN NUESTROS CLIENTES
    </h2>
    <h3
       class="text-center font-black text-white mb-8 md:mb-14 w-full mx-auto px-2
             text-xs sm:text-base md:text-lg lg:text-xl xl:text-2xl
             tracking-wide whitespace-nowrap overflow-hidden text-ellipsis"
    
    >
      VALORAMOS CADA COMENTARIO PARA SEGUIR MEJORANDO Y OFRECIENDO LO MEJOR PARA
      TI.
    </h3>
    <Testimonials client:only="react" />
  </section>
    
</Layout>
<style>
  @keyframes fadeInUpHero {
    0% {
      opacity: 0;
      transform: translateY(40px);
    }
    100% {
      opacity: 1;
      transform: translateY(0);
    }
  }
  .animate-fadeInUpHero {
    animation: fadeInUpHero 1.2s cubic-bezier(0.23, 1, 0.32, 1);
  }
</style>
