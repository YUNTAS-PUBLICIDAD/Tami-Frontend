---
import { Image } from "astro:assets";
import Layout from "../layouts/Layout.astro";
import Hero from "../components/index/Hero";
import bg_card4 from "@images/index/cards/porquetami2.png";
import mapaPeru from "@images/shipping-policies/mapa.webp";
import manoRobotica from "@images/index/robot-gris-señalar.webp";
import circuitos from "@images/index/circuitos.webp";
import iconGarantia from "@icons/icon_garantia.webp";
import trabajo from "@images/index/personas-manos-hablando.webp";
import ProductSlideshow from "src/components/index/ProductSlideshow.tsx";
import SectionCardsContainer from "src/components/index/SectionCardsContainer.astro";
import BtnGoToSectionCards from "src/components/index/BtnGoToSectionCards";
import "src/styles/global.css";
import Testimonials from "../components/index/Slideshow";
// import ScrollModal from "../components/ui/ScrollModal.tsx";
//import ProductContainer from "../components/index/ProductContainer.astro";
---

<Layout
  title="Maquinaria y Decoración para Negocios"
  description="Descubre maquinaria y decoración ideal para tu negocio. Compra selladoras, equipos de acabado y productos para emprendedores en Perú."
  canonicalUrl="https://tamimaquinarias.com/"
>
  {/* Hero principal con CTA */}
  <Hero client:idle />

  {/* Modal de asesoría/captación de leads: ahora global en Layout */}

  {/* Sección de bienvenida con imágenes y texto */}
  <section
    id="bienvenida"
    class="min-h-[360px] flex items-center justify-center px-4 text-center bg-white"
  >
    <div class="max-w-4xl mx-auto">
      <h3
        class="text-teal-700 text-3xl md:text-4xl xl:text-5xl font-extrabold tracking-wider leading-tight mb-4"
      >
        ¡BIENVENIDOS A TAMI!
      </h3>
      <p class="text-stone-500 text-lg md:text-xl xl:text-2xl">
        COMPROMETIDOS CON EL <span class="font-bold text-teal-700"
          >EMPRENDEDOR PERUANO</span
        >, OFRECIENDO PRODUCTOS <span class="font-bold text-teal-700"
          >ASEQUIBLES</span
        >
      </p>
    </div>
  </section>
  {/* Carrusel de productos con gradiente de fondo */}
  <section
    class="w-full flex flex-col lg:flex-row justify-between gap-6 py-10 px-6 lg:px-16 bg-[linear-gradient(to_right,_#2A938B,_#0D2D2B)]"
  >
    <!-- Título -->
    <div class="w-full lg:w-1/2 flex items-center justify-center">
      <h3
        class="text-white text-4xl lg:text-5xl xl:text-6xl font-extrabold text-center leading-none"
      >
        <span class="block">PRODUCTOS</span>
        <span class="block">DESTACADOS</span>
      </h3>
    </div>

    <!-- Slideshow -->
    <div class="w-full lg:w-1/2 flex items-center justify-center">
      <ProductSlideshow client:idle />
    </div>
  </section>
  <!-- ENVIOS -->
  <section class="grid grid-cols-1 sm:grid-cols-2 gap-6 lg:gap-10 py-8">
    {/* Texto a la izquierda, centrado vertical y horizontalmente */}
    <div
      class="flex flex-col justify-center items-center px-4 sm:px-12 space-y-6 text-center"
    >
      <h2
        class="text-teal-700 font-extrabold text-3xl sm:text-4xl lg:text-5xl 2xl:text-6xl lg:mb-2 max-w-3/2"
        style={{ margin: "0 auto" }}
      >
        ENVÍOS A TODA LIMA METROPOLITANA
      </h2>
      <a
        title="Enviar mensaje por WhatsApp"
        target="_blank"
        rel="noopener noreferrer"
        class="flex items-center gap-3 bg-[#009689] hover:bg-[#007a72] transition text-white rounded-2xl px-6 py-4 font-semibold text-lg lg:text-xl 2xl:text-3xl my-5"
      >
        <svg
          viewBox="0 0 24 24"
          class="scale-x-[-1] w-10 h-10"
          fill="none"
          xmlns="http://www.w3.org/2000/svg"
          aria-hidden="true"
        >
          <path
            fill-rule="evenodd"
            clip-rule="evenodd"
            d="M2.678 11.422a2.5 2.5 0 0 0 0 3.536l6.364 6.364a2.5 2.5 0 0 0 3.536 0l7.69-7.69A2.5 2.5 0 0 0 21 11.864V4.5A1.5 1.5 0 0 0 19.5 3h-7.365a2.5 2.5 0 0 0-1.768.732l-7.69 7.69zM14.988 7C13.878 7 13 7.832 13 8.988c0 1.157.878 2.012 1.988 2.012C16.121 11 17 10.145 17 8.988 17 7.832 16.12 7 14.988 7z"
            fill="currentColor"></path>
        </svg>

        <div class="leading-snug">
          <p>COTÍZALO AQUÍ</p>
        </div>
      </a>
    </div>

    {/* Mapa a la derecha */}
    <div class="flex justify-center items-center">
      <img
        src={mapaPeru.src}
        alt="Mapa apuntando Lima"
        title="Mapa apuntando Lima"
        class="w-3/4 md:w-1/2"
      />
    </div>
  </section>
  {/* Sección ¿Por qué elegir TAMI? */}
  <section class="w-full px-4 lg:px-8 py-8">
    <div
      class="relative rounded-3xl overflow-hidden h-[700px] lg:h-[800px] px-6 lg:px-24 flex items-center"
      style={`background-image: url('${bg_card4.src}'); background-size: contain; background-position: center; background-repeat: no-repeat;`}
    >
      <!-- Overlay -->
      <div class="absolute inset-0 bg-black/40 z-0"></div>

      <!-- Contenido con texto alineado a la derecha -->
      <div class="relative z-10 text-white text-left max-w-3xl ml-auto">
        <h2 class="text-3xl md:text-5xl font-extrabold mb-6">
          ¿POR QUÉ ELEGIR TAMI?
        </h2>
        <p class="text-lg md:text-xl font-medium">
          Ofrecemos garantía, asesoría y acompañamiento para cada compra. Somos
          aliados de emprendedores en todo el Perú.
        </p>
      </div>
    </div>
  </section>

  {/* Sección de productos destacados en cartas */}
  <section
    id="sectionCards"
    class="w-full my-8 scroll-mt-20 max-w-screen-2xl mx-auto"
  >
    <SectionCardsContainer />
  </section>
  <section
    class="w-full pt-12 mt-16 md:mt-24 flex flex-col relative bg-[linear-gradient(90deg,_#035751_0%,_#018C81_100%)] before:content-[''] before:absolute before:top-0 before:left-0 before:right-0 before:h-[7px] before:shadow-[0_-4px_6px_-2px_rgba(0,0,0,0.1)] before:shadow-gray-200"
  >
    <h2
      class="text-center text-3xl md:text-4xl font-black text-white mb-4 tracking-widest"
    >
      LO QUE DICEN NUESTROS CLIENTES
    </h2>
    <h3
      class="text-center text-lg md:text-2xl font-black text-white mb-8 md:mb-14 tracking-widest px-4 md:px-40 lg:px-80"
    >
      VALORAMOS CADA COMENTARIO PARA SEGUIR MEJORANDO Y OFRECIENDO LO MEJOR PARA
      TI.
    </h3>
    <Testimonials client:only="react" />
  </section>
</Layout>
<style>
  @keyframes fadeInUpHero {
    0% {
      opacity: 0;
      transform: translateY(40px);
    }
    100% {
      opacity: 1;
      transform: translateY(0);
    }
  }
  .animate-fadeInUpHero {
    animation: fadeInUpHero 1.2s cubic-bezier(0.23, 1, 0.32, 1);
  }
</style>
