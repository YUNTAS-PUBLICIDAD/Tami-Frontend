---
interface Props {
  image: string;
  title: string;
  paragraph: string;
  imageTitle: string;
}

const { image, title, paragraph, imageTitle } = Astro.props;
---

<div
  class="relative w-full max-w-[280px] sm:max-w-[300px] md:max-w-none
         h-80 sm:h-96 md:h-[26rem] lg:h-[28rem] xl:h-[30rem]
         rounded-2xl overflow-hidden shadow-lg hover:shadow-xl
         transition-shadow duration-300"
>
  <!-- Imagen -->
  <img
    src={image}
    alt={`Card del Valor de ${title}`}
    title={imageTitle}
    class="absolute z-0 w-full h-full object-cover object-center"
    width="300"
    height="400"
    loading="lazy"
    decoding="async"
  />

  <!-- Capa oscura para legibilidad -->
  <div class="absolute inset-0 bg-black/45 z-[1]"></div>

  <!-- Contenido dentro de la imagen -->
  <div
    class="relative z-[2] flex flex-col justify-end w-full h-full
           text-white text-center pb-6 px-4"
  >
    <span class="grid gap-3">
      <!-- TÍTULO -->
      <h3
        class="text-lg sm:text-xl md:text-1xl lg:text-2xl xl:text-2xl
               font-bold drop-shadow-lg leading-tight break-words"
      >
        {title}
      </h3>

      <!-- PÁRRAFO (antes estaba oculto en móvil) -->
      <p
        class="text-sm sm:text-base md:text-base lg:text-lg xl:text-xl
               font-medium px-2 drop-shadow-md leading-relaxed
               break-words"
      >
        {paragraph}
      </p>
    </span>
  </div>
</div>

<style>
  /* Evitar cortes de texto */
  h3,
  p {
    white-space: normal !important;
    word-break: break-word !important;
  }
</style>
