---
interface Props {
  image: string;
  title: string;
  paragraph: string;
  imageTitle: string;
}

const { image, title, paragraph, imageTitle } = Astro.props;
---

<div
  class="relative w-full max-w-[280px] sm:max-w-[300px] md:max-w-none h-80 sm:h-96 md:h-[26rem] lg:h-[28rem] xl:h-[30rem] rounded-2xl overflow-hidden shadow-lg hover:shadow-xl transition-shadow duration-300"
>
  <img
    src={image}
    alt={`Card del Valor de ${title}`}
    title={imageTitle}
    class="absolute z-0 w-full h-full object-cover object-center"
    width="300"
    height="400"
    loading="lazy"
    decoding="async"
  />

  <div
    class="relative flex flex-col justify-end w-full h-full text-white text-center pb-6 px-4"
  >
    <span class="grid gap-3">
      <h3
        class="text-base sm:text-lg md:text-xl lg:text-2xl xl:text-3xl font-bold drop-shadow-lg"
      >
        {title}
      </h3>
      <p
        class="hidden md:block text-sm sm:text-base md:text-base lg:text-lg xl:text-xl font-medium px-2 drop-shadow-md leading-relaxed"
      >
        {paragraph}
      </p>
    </span>
  </div>
</div>
