---
interface Props {
  id: string;
  title: string;
  image: string;
  paragraph: string;
}

const props = Astro.props;
---

<a
  href={`/products#${props.id}`}
  class="relative rounded-3xl overflow-hidden transition-all duration-300 ease-in-out
         w-full lg:w-1/3 h-full lg:h-auto
         group-hover:lg:w-[15%] hover:lg:w-[70%]
         hover:h-full md:hover:h-full lg:hover:h-auto"
>
  <img
    src={props.image}
    alt={props.title}
    class="absolute z-0 w-full h-full object-cover object-center"
  />
  <div
    class="text-center content-end bg-gradient-to-t from-teal-700 from-10%
           relative z-10 text-white h-full w-full pb-4 px-2"
  >
    <h4 class="text-lg md:text-xl font-bold">{props.title}</h4>
    <p class="text-base md:text-lg font-light">{props.paragraph}</p>
  </div>
</a>
