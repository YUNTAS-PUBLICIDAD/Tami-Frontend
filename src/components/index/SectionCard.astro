---
interface Props {
  id: string;
  title: string;
  image: string;
  paragraph: string;
}

const props = Astro.props;
---

<a
  href={`/products#${props.id}`}
  class="relative rounded-3xl overflow-hidden transition-all duration-300 ease-in-out w-full md:w-1/3 md:group-hover:w-[15%] md:hover:w-[70%] min-h-[200px] flex"
>
  <img
    src={props.image}
    alt={props.title}
    class="absolute z-0 w-full h-full object-cover object-center"
  />
  <div
    class="text-center flex flex-col justify-end bg-gradient-to-t from-teal-700 from-10% to-transparent relative z-10 text-white w-full px-2 py-4"
  >
    <h4 class="text-xl font-bold">{props.title}</h4>
    <p class="text-lg font-light">{props.paragraph}</p>
  </div>
</a>
