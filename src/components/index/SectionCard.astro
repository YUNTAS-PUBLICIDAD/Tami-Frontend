---
import { Image } from "astro:assets";
const props = Astro.props;
---

<div class="group w-full md:w-1/3 h-90 md:h-full flex flex-col items-center">
  <a
    href={`/productos#${props.id}`}
    class="relative rounded-3xl overflow-hidden w-full h-full flex transform border border-teal-200 hover:scale-108 hover:z-20 hover:shadow-2xl hover:border-teal-400"
    title="Cards de productos"
  >
    <Image
      src={props.image}
      alt={props.alt}
      title={props.alt}
      loading={"lazy"}
      width={400}
      height={700}
      class="absolute z-0 w-full h-full object-cover object-center"
    />

    <div
      class="text-center flex flex-col justify-end relative z-10 text-white w-full px-2 py-4 md:py-16"
    >
      <h3 class="text-2xl md:text-xl font-bold">{props.title}</h3>
    </div>
  </a>
</div>
