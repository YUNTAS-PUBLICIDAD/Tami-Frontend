---
import logoTami from "@images/logos/logo-blanco-tami.gif";
import socialMediaLinks from "@data/socialMedia.data";
import CopyText from "./CopyText.astro";
---

<footer class="bg-teal-700 text-white py-12 sm:px-16">
  <div
    class="container mx-auto px-4 grid grid-cols-1 lg:grid-cols-[50%_22%_28%] gap-8 lg:gap-4 text-center lg:text-left h-full"
  >
    
    <!-- BLOQUE 1: Logo + Línea + Enlaces -->
    <div class="flex flex-row items-stretch justify-center w-full gap-4 lg:gap-10">
      
      <!-- LOGO -->
      <div class="w-5/12 lg:w-auto flex items-center justify-end lg:justify-start lg:self-start lg:mt-1">
        <img
          src={logoTami.src}
          alt="Logo de Tami"
          title="Logo de Tami"
          loading="lazy"
          width={120}
          height={60}
          class="shrink-0 w-24 lg:w-[120px] h-auto" 
        />
      </div>


      <div class="block border-l-2 border-white opacity-70 self-stretch"></div>

      <!-- 3. ENLACES -->
      <!-- 

      -->
      <div class="w-6/12 lg:w-full flex flex-col justify-center lg:block pt-1">
        
        <div class="flex flex-col lg:grid lg:grid-cols-2 lg:gap-x-16 font-semibold text-sm lg:text-base text-center lg:text-left">
          
          <!-- Primera lista -->
          <ul class="space-y-3 mb-3 lg:mb-0">
            <li><a href="/" class="hover:text-orange-300 transition-colors">Inicio</a></li>
            <li><a href="/sobre-nosotros" class="hover:text-orange-300 transition-colors">Nosotros</a></li>
            <li><a href="/productos" class="hover:text-orange-300 transition-colors">Productos</a></li>
            <li><a href="/politicas-de-envio" class="hover:text-orange-300 transition-colors">Políticas de Envíos</a></li>
            <li><a href="/blog" class="hover:text-orange-300 transition-colors">Blogs</a></li>
          </ul>

          <!-- Segunda lista -->
          <ul class="space-y-3">
            <li><a href="/libro-de-reclamaciones" class="hover:text-orange-300 transition-colors">Libro de reclamaciones</a></li>
            <li><a href="/terminos-y-condiciones" class="hover:text-orange-300 transition-colors">Términos y Condiciones</a></li>
            <li><a href="/politicas-de-privacidad" class="hover:text-orange-300 transition-colors">Políticas de Privacidad</a></li>
          </ul>

        </div>
      </div>
    </div>

    <!-- BLOQUE 2: Horario de atención -->

    <div class="flex justify-center lg:justify-start lg:pl-8 pt-1">
      <div class="flex flex-col justify-between h-auto lg:h-[200px] gap-8 lg:gap-0 text-center lg:text-left">
        <div>
          <p class="font-semibold mb-2 text-base">Horario de atención</p>
          <p class="text-base leading-relaxed">Lunes a Viernes<br />9:00 am a 9:00 pm</p>
        </div>
        <div>
          <p class="font-semibold mb-2 text-base">Para mayor información</p>
          <div class="flex flex-col gap-1 items-center lg:items-start">
             <CopyText>informestami01@gmail.com</CopyText>
             <CopyText>+51978883199</CopyText>
          </div>
        </div>
      </div>
    </div>

    <!-- BLOQUE 3: Contacto -->
    <div class="flex flex-col items-center justify-start space-y-8 lg:space-y-6 text-white pt-1">
      <button
        type="button"
        title="Abrir formulario de asesoría"
        class="cursor-pointer text-lg font-bold tracking-wide hover:opacity-80 transition-opacity"
        id="open-scroll-btn"
      >
        ¡CONTÁCTANOS!
      </button>

      <div class="w-full text-center">
        <div class="flex gap-4 justify-center flex-wrap">
          {
            socialMediaLinks.map((item) => (
              <a
                href={item.url}
                target="_blank"
                rel="noopener noreferrer"
                title={item.linkTitle}
                class="w-10 h-10 bg-black rounded-full flex items-center justify-center hover:bg-gray-800 transition-colors"
              >
                <img
                  src={item.image.src}
                  alt={item.imageTitle}
                  class="w-6 h-6"
                />
              </a>
            ))
          }
        </div>
      </div>
    </div>
  </div>
</footer>