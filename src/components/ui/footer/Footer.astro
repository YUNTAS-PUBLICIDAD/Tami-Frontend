---
import logoTami from "@images/logos/logo-blanco-tami.gif";
import socialMediaLinks from "@data/socialMedia.data";
import NavSocialMediaLink from "../sideMenu/NavSocialMediaLink";
import mascotaTami from "@images/logos/tami-mascota.webp";
import CopyText from "./CopyText.astro";
---


<footer class="bg-teal-700 text-white py-12">
  <div class="container mx-auto px-2 grid grid-cols-1 lg:grid-cols-3 gap-12 items-start">
    <!-- Separacion en 3 bloques-->
    <div class="flex items-start gap-8 w-full">
      <img
        src={logoTami.src}
        alt="Logo de Tami"
        title="Logo de Tami"
        loading="lazy"
        width={120}
        height={60}
        class="shrink-0"
      />
      <div>
        <h4 class="uppercase font-bold text-xl mb-5 tracking-wide">NAVEGACIÓN</h4>
        <ul class="space-y-2 font-semibold text-base">
          <li><a href="/" class="hover:text-orange-300 transition-colors">Inicio</a></li>
          <li><a href="/sobre-nosotros" class="hover:text-orange-300 transition-colors">Nosotros</a></li>
          <li><a href="/productos" class="hover:text-orange-300 transition-colors">Productos</a></li>
          <li><a href="/politicas-de-envio" class="hover:text-orange-300 transition-colors">Políticas de Envíos</a></li>
          <li><a href="/blog" class="hover:text-orange-300 transition-colors">Blogs</a></li>
        </ul>
      </div>
    </div>
    <div class="flex justify-center">
      <div class="text-left">
        <h4 class="uppercase font-bold text-xl mb-5 tracking-wide">CONTACTO</h4>
        <p class="font-bold mb-1 text-base">Horario de atención</p>
        <p class="mb-4 text-base">Lunes a Viernes<br />9:00 am a 9:00 pm</p>
        <p class="font-bold mb-1 text-base">Email</p>
        <CopyText>informestami01@gmail.com</CopyText>
        <p class="font-bold mt-4 mb-1 text-base">Teléfono</p>
        <CopyText>+51978883199</CopyText>
      </div>
    </div>
    <div class="flex flex-col items-center space-y-8">
      <img
        src={mascotaTami.src}
        title="Mascota Tami"
        alt="Mascota Tami"
        loading="lazy"
        width={100}
        height={100}
        class="mx-auto"
      />
      <button
        type="button"
        title="Abrir formulario de asesoría"
        class="bg-orange-500 hover:bg-orange-600 text-white font-bold py-2 px-8 rounded-full transition-colors duration-300 cursor-pointer text-base shadow-md"
        id="open-scroll-btn"
      >
        ¡CONTÁCTANOS!
      </button>
      <div class="w-full text-center">
        <h4 class="uppercase font-bold text-xl mb-4 tracking-wide">SÍGUENOS</h4>
        <div class="flex gap-7 mt-2 justify-center flex-wrap">
          {socialMediaLinks.map((item) => (
            <NavSocialMediaLink
              socialMediaName={item.socialMediaName}
              image={item.image.src}
              url={item.url}
              imageTitle={item.imageTitle}
              linkTitle={item.linkTitle}
            />
          ))}
        </div>
      </div>
    </div>
  </div>
</footer>
