const trackingId = "G-........."; // Reemplaza con ID de seguimiento
---

<!-- Google tag (gtag.js) -->
<script is:inline src={`https://www.googletagmanager.com/gtag/js?id=${trackingId}`}></script>
<script is:inline>
  window.dataLayer = window.dataLayer || [];
  function gtag() {
    dataLayer.push(arguments);
  }
  gtag("js", new Date());
  gtag("config", trackingId);
</script>