---
import Footer from "../components/ui/footer/Footer.astro";
import NavBar from "../components/ui/navbar/NavBar";
import ScrollModal from "../components/ui/ScrollModal.tsx";
import WhatsApp from "../components/ui/whatsapp.astro";
import "../styles/global.css";
interface Props {
  title: string;
}
const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no, shrink-to-fit=no" />
    <link rel="icon" type="image/webp+xml" href="/logo.webp" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <style>
      body {
        width: 100%;
        max-width: 100vw;
        overflow-x: hidden;
      }
      .float {
          text-align: center;
          font-size: 30px;
          z-index: 100;
      }
  </style>
  <meta name="google-site-verification" content="fMYl61WKoofkx6daixXAZuFbR-zw9NlYGrf22iA1r0w" />
  </head>
  <body class="font-montserrat scroll-smooth w-full">
    <NavBar client:load />
    <slot />
    <Footer />
    <ScrollModal client:load />
    <WhatsApp />
  </body>
</html>
